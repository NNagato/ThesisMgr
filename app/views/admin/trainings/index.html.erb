<h2><% provide(:title, "Tất cả Chương trình đào tạo") %></h2>
<div class="clearfix"></div>
<div class="x_content">
  <div class="table-responsive">
      <table class="table table-striped jambo_table bulk_action">
          <thead>
              <tr class="headings">
                  <th>
                      <input type="checkbox" id="check-all" class="flat">
                  </th>
                  <th>Tên chương trình</th>
                  <th>Mô tả</th>
                  <th>Khóa học</th>
                  <th class="column-title no-link last"><span class="nobr">Hành động</span>
                  </th>
                  <th class="bulk-actions" colspan="7">
                      <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                  </th>
              </tr>
          </thead>

          <tbody>
              <% @trainings.each do |training| %>
                  <tr class="even pointer">
                      <td class="a-center ">
                          <input type="checkbox" class="flat" name="table_records">
                      </td>
                      <td class=""><%= training.name %></td>
                      <td class=""><%= training.description %></td>
                      <td class=""><%= training.course.name %></td>
                      <td class=" last">
                          <%= link_to "Sửa", edit_admin_training_path(id: training.id) %>
                          |
                         <%= link_to "Xóa", [:admin, training], method: :delete,
                          data: {confirm: t("comfirm")} %>
                      </td>
                  </tr>
              <% end %>
          </tbody>
      </table>
  </div>
</div>
