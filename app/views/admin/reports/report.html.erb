<h2><% provide(:title, "Danh sách đề tài") %></h2>
<div class="x_content" style="margin-top: 40px">
  <div class="table-responsive">
    <table class="table table-striped jambo_table bulk_action">
      <thead>
        <tr class="headings">
          <th>
            <input type="checkbox" id="check-all" class="flat">
          </th>
          <th class="column-title">STT </th>
          <th class="column-title">Tên đề tài </th>
          <th class="column-title">Sinh viên</th>
          <th class="column-title">Khoa </th>
          <th class="column-title">Hành động</th>
        </tr>
      </thead>

      <tbody>
        <% @reports.each_with_index do |report,index| %>
          <tr class="even pointer">
            <td class="a-center ">
              <input type="checkbox" class="flat" name="table_records">
            </td>
            <td class=""><%= index + 1 %></td>
            <td class=" "><%= report.topic.name %></td>

            <td class=" "><%= report.topic.student.user.first_name + " " + report.topic.student.user.last_name %></td>
            <td class=" "><%= report.topic.student.department.name %></td>
            <td><%= link_to "Xuất biên bản", admin_path(report.id), class: "btn btn-default",method: :get %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
