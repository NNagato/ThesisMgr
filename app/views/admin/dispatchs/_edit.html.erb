<%= link_to "Xuất công văn đề nghị điều chỉnh đề tài", admin_suadoi_path, method: :get, class: "btn btn-default" %>
<h2 style="text-align: center;">Danh sách sinh viên được thay đổi đề tài khóa luận tốt nghiệp đại học hệ chính quy</h2>
<div class="x_content">
  <div class="table-responsive">
      <table class="table table-striped jambo_table bulk_action">
          <thead>
              <tr class="headings">
                  <th>Mã học viên</th>
                  <th>Họ và tên</th>
                  <th>Tên đề tài cũ</th>
                  <th>Tên đề tài mới</th>
                  <th>Người hướng dẫn</th>
              </tr>
          </thead>

          <tbody>
              <% @topics_edit.each do |topic| %>
                  <tr class="even pointer">
                      <td class=""><%= topic.student.user.code %></td>
                      <td class=""><%= topic.student.user.first_name + topic.student.user.last_name %></td>
                      <td><%= topic.name %></td>
                      <td><%= topic.new_name%></td>
                      <td class="">
                        <% topic.student.topic.divisions.each do |division| %>
                          <p><%= division.teacher.user.first_name + division.teacher.user.last_name %></p>
                        <% end %>
                      </td>

                  </tr>
              <% end %>
          </tbody>
      </table>
  </div>
</div>
