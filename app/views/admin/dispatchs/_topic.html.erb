<%= link_to "Xuất công văn đề nghị danh sách học viên và cán bộ hướng dẫn ", admin_denghi_path, method: :get, class: "btn btn-default" %>
<h2 style="text-align: center;">Danh sách sinh viên, tên cán bộ hướng dẫn khóa luận tốt nghiệp và đề tài thực hiện</h2>
<div class="x_content">
  <div class="table-responsive">
      <table class="table table-striped jambo_table bulk_action">
          <thead>
              <tr class="headings">
                  <th>Mã học viên</th>
                  <th>Họ và tên</th>
                  <th>Tên đề tài</th>
                  <th>Người hướng dẫn</th>
              </tr>
          </thead>

          <tbody>
              <% @students.each do |student| %>
                  <tr class="even pointer">
                      <td class=""><%= student.user.code %></td>
                      <td class=""><%= student.user.first_name + student.user.last_name %></td>
                      <td><%= student.topic.name %></td>
                      <td class="">
                        <% student.topic.divisions.each do |division| %>
                          <p><%= division.teacher.user.first_name + division.teacher.user.last_name %></p>
                        <% end %>
                      </td>

                  </tr>
              <% end %>
          </tbody>
      </table>
  </div>
</div>
