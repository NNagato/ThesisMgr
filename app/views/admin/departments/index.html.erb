<h2><% provide(:title, "Tất cả khoa") %></h2>
<div class="clearfix"></div>
<div class="x_content">
  <%= link_to "Tạo khoa", new_admin_department_path, class: "btn btn-primary" %>
  <div class="table-responsive">
      <table class="table table-striped jambo_table bulk_action">
          <thead>
              <tr class="headings">
                  <th>
                      <input type="checkbox" id="check-all" class="flat">
                  </th>
                  <th>Tên khoa</th>
                  <th>Văn phòng khoa</th>
                  <th class="column-title no-link last"><span class="nobr">Hành động</span>
                  </th>
                  <th class="bulk-actions" colspan="7">
                      <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                  </th>
              </tr>
          </thead>

          <tbody>
              <% @departments.each do |department| %>
                  <tr class="even pointer">
                      <td class="a-center ">
                          <input type="checkbox" class="flat" name="table_records">
                      </td>
                      <td class=" "><%= department.name %></td>
                      <td class=" "><%= department.office %></td>
                      <td class=" last">
                          <%= link_to "Sửa", edit_admin_department_path(id: department.id) %>
                          |
                         <%= link_to "Xóa", [:admin, department], method: :delete,
                        data: {confirm: t("comfirm")} %>
                      </td>
                  </tr>
              <% end %>
          </tbody>
      </table>
  </div>
</div>
