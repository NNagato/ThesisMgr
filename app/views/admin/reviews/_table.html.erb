<div class="x_content" style="margin-top: 40px">
  <div class="table-responsive">
    <table class="table table-striped jambo_table bulk_action">
      <thead>
        <tr class="headings">
          <th>
            <input type="checkbox" id="check-all" class="flat">
          </th>
          <th class="column-title">STT </th>
          <th class="column-title">Tên đề tài </th>
          <th class="column-title">Mã sinh viên </th>
          <th class="column-title">Họ tên </th>
          <th class="column-title">Khoa </th>
          <th class="bulk-actions" colspan="7">
            <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
          </th>
        </tr>
      </thead>

      <tbody>
        <% @topics.each_with_index do |item,index| %>
          <tr class="even pointer">
            <td class="a-center ">
              <input type="checkbox" class="flat" name="table_records">
            </td>
            <td class=""><%= index + 1 %></td>
            <td class=" "><%= link_to item.name, edit_admin_review_path(item.id), :"data-no-turbolink" => true, method: :get %></td>

            <td class=" "><a href=""> <%= item.student.user.code %></a></td>
            <td class=" "><a href=""> <%= item.student.user.first_name + " " + item.student.user.last_name %></a></td>
            <td class=" "><a href=""> <%= item.student.department.name %></a></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
