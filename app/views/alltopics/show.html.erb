
<style>
  .card {
    /* background-color: white; */
    color:white;
  }
  .card-block {
    padding: 1.25rem;
  }
  .shadow {
    height: calc(50vh);
    box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0), 0 1px 4px 0 rgba(0, 0, 0, 0.19);
  }
  .full {
    margin-top: 20px;
    width: 100%;
  }
</style>
<% if current_user.rules == 3 %>
  <%= render "layouts/menu_teacher" %>
<% else %>
  <%= render "layouts/menu" %>
<% end %>
<div class="col-md-8 col-md-offset-2" style="margin-top: 20px;">
  <div class="card-block shadow">
    <div class="col-md-8">
      <h2 style="text-align: center;"><%= @teacher.user.first_name + " " + @teacher.user.last_name %></h2>
        <h5 class="title" style="font-weight: bold;">Họ tên: </h5>
        <p> <%= @teacher.user.first_name + " " + @teacher.user.last_name %> </p>

        <h5 class="title" style="font-weight: bold;">Khoa: </h5>
        <p> <%= @teacher.department.name %> </p>

        <h5 class="title" style="font-weight: bold;">Bộ môn/Phòng thí nghiệm: </h5>
        <p> <%= @teacher.subject.name %> </p>

        <h5 class="title" style="font-weight: bold;">Các hướng nghiên cứu: </h5>
          <% @researches.each_with_index do |t, index| %>
            <%= t.name %>
          </p>
        <% end %>
    </div>
    <div class="col-md-4">
      <%= image_tag(@teacher.user.avatar.url) %>
    </div>
  </div>
</div>
