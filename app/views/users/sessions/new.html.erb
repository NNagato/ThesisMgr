<style>
.navbar-banner {
      margin: 0 !important;
      margin-bottom: 30px !important;
    }
    .row {
      margin: 0 !important;
    }
    .center {
      text-align: center;
      padding: 0;
      margin: 0;
    }
    body {
        background: #a2e0f9;
        background: -moz-linear-gradient(-45deg, #a2e0f9 6%, #cef5fc 39%, #eafaeb 70%, #fefcd3 88%, #fdf4ba 100%);
        background: -webkit-gradient(linear, left top, right bottom, color-stop(6%, #a2e0f9), color-stop(39%, #cef5fc), color-stop(70%, #eafaeb), color-stop(88%, #fefcd3), color-stop(100%, #fdf4ba));
        background: -webkit-linear-gradient(-45deg, #a2e0f9 6%, #cef5fc 39%, #eafaeb 70%, #fefcd3 88%, #fdf4ba 100%);
        background: -o-linear-gradient(-45deg, #a2e0f9 6%, #cef5fc 39%, #eafaeb 70%, #fefcd3 88%, #fdf4ba 100%);
        background: -ms-linear-gradient(-45deg, #a2e0f9 6%, #cef5fc 39%, #eafaeb 70%, #fefcd3 88%, #fdf4ba 100%);
        background: linear-gradient(135deg, #a2e0f9 6%, #cef5fc 39%, #eafaeb 70%, #fefcd3 88%, #fdf4ba 100%);
    }

    #slideshow {
        position: relative;
        width: 100%;
        height: 390px;
    }

    #slideshow > div {
        top: 10px;
        left: 10px;
        right: 10px;
        bottom: 10px;
        vertical-align: middle;
    }

    .logo {
        margin-top: 1em;
        font-size: 3em;
        font-weight: 600;
        text-shadow: 2px 2px 1px rgba(0, 0, 0, 0.15);
    }

    .logo-truong {
        color: royalblue;
    }

    #slideshow .fa {
        font-size: 12em;
        padding-top: .5em;
        text-shadow: 8px 8px 1px rgba(0, 0, 0, 0.15);
    }

    h3 {
        padding-top: 1em;
        text-shadow: 2px 2px 1px rgba(0, 0, 0, 0.15);
    }
    .well {
      background: transparent;

    }

    .navbar-banner {
      margin-left: -15px;
      margin-right: -15px;
      background:transparent;
      padding: 15px 0px 15px 0;
    }
    .header-slogan {
      font-size: 1.5em;
      padding: 0.3em;
        color:grey;
    }
    .navbar-custom {
      border-bottom: 1px solid rgba(189,195,199,0.25);
    }
    @media (min-width: 992px) {
      .header-slogan {
        margin-top: -1em;

      }
     #slideshow > div {
        position: absolute;
     }
    }
    @media (max-width: 992px) {
      .custom {
        width: 100%;
      }
    }
</style>
<nav class="navbar navbar-custom navbar-banner">
  <div class="row main">
    <div class="col-md-8">
      <div class="text-center hidden-xs hidden-sm">
        <span class="fa fa-university" style="color: #444C5C;font-size:3em;">
        </span>

        <span style="font-size: 2em;">
            <i class="fa fa-arrow-left" style="padding: 1em;"></i>
            <span style="font-size: 1em;color: #5cb85c;">
            <i class="fa fa-calendar" style=""></i>
            <i class="fa fa-book" style=""></i>
            <i class="fa fa-bullhorn" style=""></i>
            <i class="fa fa-trophy" style=""></i>
            </span>
            <i class="fa fa-arrow-right" style="padding: 1em;"></i>
        </span>

        <span style="font-size: 3em">
            <i class="fa fa-home" style="color: #58A5A3;"></i>
            <i class="fa fa-home" style="color: #E1B16A;margin-left: -.7em;"></i>
            <i class="fa fa-home" style="color: #CE5A57;margin-left: -.7em;"></i>
        </span>
      </div>
      <div class="text-center header-slogan">
        <div><span class="logo-truong">Bảo Vệ Khóa Luận</span>
          giúp sinh viên tự tin khi ra trường</div>
      </div>
    </div>
  </div>
</nav>
<div class="container-fluid">
  <div class="row main">
    <div class="col-md-8">
      <div id="slideshow" class="text-center">
      <div style="display: block;">
          <i class="fa fa-university" style="color:#444C5C;"></i>
          <h3><span class="logo-truong">Bảo Vệ Khóa Luận</span> - Là thành quả cuối cùng của sinh viên</h3>
        </div><div style="display: none;">
          <i class="fa fa-link" style="color:#CE5A57;"></i>
          <h3><span class="logo-truong">Bảo Vệ Khóa Luận</span> - tiến bước tới tương lai</h3>
        </div><div style="display: none;">
          <i class="fa fa-book" style="color:#58A5A3;"></i>
          <h3><span class="logo-truong">Bảo Vệ Khóa Luận</span> - nổ lực của bạn sẽ được đền đáp</h3>
        </div><div style="display: none;">
          <i class="fa fa-comments-o" style="color:#E1B16A;"></i>
          <h3><span class="logo-truong">Bảo Vệ Khóa Luận</span> - kỉ niệm khó phai với sinh viên</h3>
        </div><div style="display: none;">
          <i class="fa fa-trophy" style="color:gold;"></i>
          <h3><span class="logo-truong">Bảo Vệ Khóa Luận</span> - nâng cao chất lượng giáo dục</h3>
        </div></div>
    </div>

    <div class="col-md-4 custom">
      <div class="well">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
          <h3 class="center">Đăng nhập</h3>
          <div class="field" style="margin-top:20px;">
            <%= f.label :login, "Mã hoặc email" %><br />
            <%= f.text_field :login, autofocus: true, class: "form-control" %>
          </div>

          <div class="field" style="margin-top:20px;">
            <%= f.label :password, "Mật khẩu" %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field" style="margin-top:20px;">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Nhớ tôi" %>
            </div>
          <% end -%>

          <div class="actions" style="margin-top:10px;">
            <%= f.submit "Đăng nhập" ,class: "btn btn-success" %>
          </div>
        <% end %>
      <%#= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
<script>
    $("#slideshow > div:gt(0)").hide();

    var fade = setInterval(function () {
        $('#slideshow > div:first')
                .fadeOut(1000)
                .next()
                .fadeIn(1000)
                .end()
                .appendTo('#slideshow');
    }, 5000);

    $(document).ready(function() {
      if ($(document).width() < 992) {
        clearInterval(fade);
      }
    });
</script>
