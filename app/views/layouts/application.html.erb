<!DOCTYPE html>
<html>
<head>
  <title>ThesisMgr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if user_signed_in? %>
  <%= render "layouts/header" %>
  <%= render "layouts/left" %>
  <%= yield %>
  <%= render "layouts/footer" %>
<% else %>
<%= yield %>
<% end %>

</body>
</html>
