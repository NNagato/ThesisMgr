<style>
  .card {
    /* background-color: white; */
    color:white;
  }
  .card-block {
    padding: 1.25rem;
  }
  .shadow {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  }
  .full {
    margin-top: 20px;
    width: 100%;
  }
</style>
<%= render "layouts/menu" %>
<div class="col-md-4 col-md-offset-4 col-xs-12" style="margin-top: 20px;">
  <div class="card-block shadow">
      <% if @topic.blank? %>
        <p>Chưa có đề tài</p>
      <% else %>
        <h5 class="title" style="font-weight: bold;">Tên đề tài </h5>
        <h5>
          <%= @topic.name %>
        </h5>
          <p class="" style="font-weight: bold;">Mô tả:</p>
          <p>
            <%= @topic.description %>
          </p>
          <% @teacher.each_with_index do |t, index| %>
            <p class="" style="font-weight: bold;">Giáo viên hướng dẫn <%= index + 1 %>:</p>
          <p>
            <%= t %>
          </p>
        <% end %>
          <p class="" style="font-weight: bold;">Trạng thái đề tài:</p>
          <% case @topic.status %>
          <% when 0 %>
            <p>Đang đợi giảng viên đồng ý</p>
          <% when 1 %>
            <p>Giảng viên đồng ý</p>
          <% when 2 %>
            <p>Giảng viên không đồng ý</p>
          <% when 3 %>
            <p>Đang đợi giảng viên đồng ý sửa</p>
          <% when 4 %>
            <p>Sửa thành công</p>
          <% when 5 %>
            <p>Rút thành công</p>
          <% when 6 %>
            <p>Đang đợi rút</p>
          <% when 7 %>
            <p>Sửa không thành công</p>
          <% when 8 %>
            <p>Rút không thành công</p>
          <% end %>

          <p class="" style="font-weight: bold;">Trạng thái hồ sơ:</p>
          <% case @topic.is_proteced %>
          <% when 0 %>
            <p>Chưa gửi hồ sơ</p>
          <% when 2 %>
            <p>Đã nộp hồ sơ</p>
          <% when 3 %>
            <p>Hồ sơ hợp lệ</p>
          <% when 4 %>
            <p>Đã nộp quyển</p>
          <% else %>
            <p>Chưa gửi hồ sơ</p>
          <% end %>
        <% end %>
    </div>
</div>
